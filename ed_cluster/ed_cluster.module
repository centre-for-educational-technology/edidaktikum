function ed_get_value_from_html($key, $html)
{
  $value = '';
  $string = $key . '="';
  $i = strpos($html, $string);

  if ($i == false) return false;

  $i += strlen($string);
  while (($k = $html[$i]) != '"') {
    $value .= $html[$i];
    $i++;
  }
  return $value;
}

