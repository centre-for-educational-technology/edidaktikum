    $form['#attached']['js'] = array(drupal_get_path('module', 'ed_answer') . '/ed_answer_js.js',);
    $form['ed_answer_task_cat'] = array(
      '#tree' => TRUE,
      '#type' => 'fieldset',
      '#title' => t('Category'),
      '#group' => 'tabs',
    );

    $form['ed_answer_task_cat']['category'] = array(
      '#tree' => TRUE,
      '#type' => 'container',
      '#prefix' => '<ul class="category-container">',
      '#suffix' => '</ul>',
    );
    $help = 0;
    foreach($cat_terms as $tid){
