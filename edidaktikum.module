 */
function edidaktikum_menu() {
  $items['home'] = array(
    'title' => 'Home',
    'page callback' => 'edidaktikum_home_page',
    'access callback' => TRUE,
    'weight' => 0,
    'menu_name' => 'main-menu',
    'type' => MENU_NORMAL_ITEM,
  );
  return $items;
}

